<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fragment_more_section_height"
    android:layout_marginTop="7dp"
    app:elevation="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="@dimen/fragment_more_section_height"
        android:background="#26A69A"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fragment_more_section_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/fragment_more_section_text_padding"
            android:text="项目组"
            android:textColor="@color/fragment_more_section_text_color"
            android:textSize="@dimen/fragment_more_section_text_size"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_more_section_height"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="#26A69A"
        android:orientation="horizontal">

        <!--android:contentDescription="@string/image_button_content_description"-->
        <!--android:background="@drawable/selector_section_toggle"-->
        <!--android:padding="@dimen/section_padding"-->
        <ToggleButton
            android:id="@+id/toggle_button_section"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/activity_main_add_one"
            android:textOff=""
            android:textOn=""/>

    </LinearLayout>

</LinearLayout>