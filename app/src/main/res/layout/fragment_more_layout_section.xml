<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fragment_more_section_height"
    android:layout_marginTop="7dp"
    app:elevation="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/fragment_more_section_height"
        android:layout_gravity="center"
        android:background="#26A69A"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_section"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fragment_more_section_height"
            android:paddingBottom="@dimen/fragment_more_section_padding"
            android:paddingStart="@dimen/fragment_more_section_text_padding_left"
            android:paddingTop="@dimen/fragment_more_section_padding"
            android:textAlignment="center"
            android:textColor="@color/fragment_more_section_text_color"
            android:textSize="@dimen/fragment_more_section_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_more_section_height"
        android:layout_gravity="center"
        android:background="#26A69A"
        android:paddingEnd="20dp"
        android:gravity="center_vertical|end"
        android:orientation="horizontal">

        <ToggleButton
            android:id="@+id/toggle_button_expand"
            android:layout_width="@dimen/fragment_more_layout_icon_expand"
            android:layout_height="@dimen/fragment_more_layout_icon_expand"
            android:layout_marginStart="10dp"
            android:background="@drawable/fragment_more_layout_section_expand"
            android:padding="@dimen/fragment_more_section_padding"
            android:textOff=""
            android:textOn="" />

        <ToggleButton
            android:id="@+id/toggle_button_add"
            android:layout_width="@dimen/fragment_more_layout_icon_add"
            android:layout_height="@dimen/fragment_more_layout_icon_add"
            android:layout_marginStart="10dp"
            android:background="@drawable/fragment_more_layout_section_add"
            android:padding="@dimen/fragment_more_section_padding"
            android:textOff=""
            android:textOn="" />

        <ToggleButton
            android:id="@+id/toggle_button_remind"
            android:layout_width="@dimen/fragment_more_layout_icon_alarm"
            android:layout_height="@dimen/fragment_more_layout_icon_alarm"
            android:layout_marginStart="10dp"
            android:background="@drawable/fragment_more_layout_section_alarm"
            android:padding="@dimen/fragment_more_section_padding"
            android:textOff=""
            android:textOn="" />

    </LinearLayout>
</LinearLayout>
