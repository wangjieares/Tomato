<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:gravity="center"
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:orientation="vertical"
        android:padding="@dimen/custrom_linearlayout_padding">

        <EditText
            android:textAlignment="center"
            android:id="@+id/edit_custom_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/edit_custrom_time"
            android:inputType="number" />

        <Button
            android:background="@drawable/custrom_button_selector"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/custrom_button_color"
            android:text="@string/custrom_time" />
    </LinearLayout>

</LinearLayout>