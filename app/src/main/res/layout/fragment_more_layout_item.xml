<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:elevation="5dp"
    android:background="#2980b9"
    android:layout_marginTop="@dimen/fragment_more_item_margin_top_bottom"
    android:layout_marginBottom="@dimen/fragment_more_item_margin_top_bottom"
    android:layout_marginLeft="@dimen/fragment_more_item_margin_left_right"
    android:layout_marginRight="@dimen/fragment_more_item_margin_left_right"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fragment_more_section_height">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/text_item"
        android:textColor="@color/fragment_more_section_text_color"
        android:gravity="center"
        android:layout_gravity="center" />

</LinearLayout>